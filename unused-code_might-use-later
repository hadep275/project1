import readline from "readline";

const rl = readline.createInterface({
  input: process.stdin,
  output: process.stdout,
});

rl.on("line", (input) => {
  if (input.trim() === "exit") {
    rl.close();
    return;
  }
  output(input);
});

function output(input) {
  console.log(`You rang: ${input}`);
}

